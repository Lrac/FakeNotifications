<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context="com.fakenotification.PhoneCall"
    android:orientation="vertical"
    android:background="#151515">

    <LinearLayout
        android:orientation="vertical"
        android:layout_weight="2"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent">


        <TextView
            android:layout_gravity="center_horizontal"
            android:textSize="20pt"
            android:layout_width="wrap_content"
            android:maxWidth="300dp"
            android:layout_height="wrap_content"
            android:text="Incoming Call"
            android:textColor="#FFFFFF"/>

        <ImageView
            android:layout_width="200dp"
            android:layout_height="200dp"
            android:layout_gravity="center"
            android:src="@drawable/doge" />

        <TextView
            android:layout_gravity="center_horizontal"
            android:id="@+id/incoming_caller"
            android:textColor="#FFFFFF"
            android:textSize="17pt"
            android:layout_width="wrap_content"
            android:maxWidth="300dp"
            android:layout_height="wrap_content"
            android:text="Caller" />

        <TextView
            android:layout_gravity="center_horizontal"
            android:id="@+id/incoming_number"
            android:textColor="#FFFFFF"
            android:textSize="17pt"
            android:layout_width="wrap_content"
            android:maxWidth="300dp"
            android:layout_height="wrap_content"
            android:text="Number" />


        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_weight="6"
            android:layout_height="wrap_content"
            android:gravity="center">

            <Button
                android:textSize="17pt"
                android:onClick="accept_call"
                android:layout_marginRight="65dp"
                android:layout_width="wrap_content"
                android:textColor="#FFFFFF"
                android:maxWidth="300dp"
                android:layout_height="wrap_content"
                android:text="Accept"
                android:background="@drawable/rounded_corner6" />

            <Button
                android:textSize="17pt"
                android:onClick="end_activity"
                android:layout_width="wrap_content"
                android:maxWidth="300dp"
                android:textColor="#FFFFFF"
                android:layout_height="wrap_content"
                android:gravity="right"
                android:text="Decline"
                android:background="@drawable/rounded_corner5" />
            </LinearLayout>

        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:onClick="declineWithMessage"
            android:id="@+id/declineWithMessage"
            android:textColor="#FFFFFF"
            android:textSize="12pt"
            android:layout_gravity="center"
            android:text="Decline with message"
            android:background="@drawable/rounded_corner8"/>

    </LinearLayout>

</LinearLayout>
